#:kivy 1.11.1

<ModbusPopup>:
    title: 'Configurações MODBUS'
    size_hint: 0.25,0.25
    BoxLayout:
        orientation: 'vertical'
        spacing: 7
        padding:7
        canvas:
            Color:
                rgb: 225/255, 228/255, 235/255
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation:'vertical'
            padding:7
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            GridLayout:
                spacing: 7
                cols: 2
                rows: 3
                Label:
                    text: 'IP'
                    font_size: 14
                    color: 98/255, 113/255, 142/255
                TextInput:
                    id: txt_ip
                    text: '127.0.0.1'
                    fonte_size: 14
                    halign: 'center'
                    valign: 'middle'
                Label:
                    text: 'Porta'
                    font_size: 14
                    color: 98/255, 113/255, 142/255
                TextInput:
                    id: txt_porta
                    text: '502'
                    fonte_size: 14
                    halign: 'center'
                    valign: 'middle'
                TempBotao:
                    text: 'Conectar'
                    on_release:
                        app.root.iniciaColetaDados(txt_ip.text,int(txt_porta.text))
                TempBotao:
                    text: 'Fechar'
                    on_release:
                        root.dismiss()
                    #     root.clearInfo()

