<ScanPopup>:
    title: "Configuração ScanTime"
    size_hint: 0.25,0.25
    BoxLayout:
        orientation:'vertical'
        spacing:7
        padding:7
        canvas:
            Color:
                rgb: 225/255, 228/255, 235/255
            Rectangle:
                size: self.size
                pos: self.pos  
        BoxLayout:
            orientation:'vertical'
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            GridLayout:
                cols: 2
                rows: 1
                size_hint_y:0.15
                padding:7
                Label:
                    text:'Scantime [ms]'
                    color: 98/255, 113/255, 142/255
                TextInput:
                    id:txt_st
                    halign: 'center'
                    valign: 'middle'
            BoxLayout:
                orientation:'vertical'
                spacing:7
                size_hint_y:0.33
                padding:7
                TempBotao:
                    text:'Configurar'
                    on_release:
                        app.root._scan_time = int(txt_st.text)
                TempBotao:
                    text:'Fechar'
                    on_release: root.dismiss()                    

<comandoVent>:
    title: 'Comandos dos ventiladores'
    size_hint: 0.42, 0.90
    spacing: 49
    BoxLayout:
        orientation:'vertical'
        spacing:14
        padding:14
        canvas:
            Color:
                rgb: 225/255, 228/255, 235/255
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation:'horizontal'
            spacing:7
            padding:7
            size_hint:0.75,0.35
            pos_hint:{'center_x':0.5}
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            TempBotao:
                text:'desligar'
            TempBotao:
                text:'resetar'
        BoxLayout:
            orientation:'vertical'
            spacing:7
            padding:7
            size_hint:0.5,3*0.35
            pos_hint:{'center_x':0.5}
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            TempBotao:
                text:'Direto'
                on_release: root.limparOpc()
            TempBotao:
                text:'inversor'
                on_release: root.porOpcoes(True)
            TempBotao:
                text:'soft'
                on_release: root.porOpcoes(False)
        GridLayout:
            rows:2
            cols:3
            padding:7
            size_hint_y: 0.4
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            Label:
                text:'Seleção do ventilador'
                color: 98/255, 113/255, 142/255
            BoxLayout:
                orientation:'horizontal'
                spacing:7
                padding:7
                CheckBox:
                    id:axial
                    group: 'ventilador'
                    color: 98/255, 113/255, 142/255
                Label:
                    text:'Axial'
                    color: 98/255, 113/255, 142/255
            BoxLayout:
                orientation:'horizontal'
                spacing:7
                padding:7
                CheckBox:
                    id:radial
                    group: 'ventilador'
                    color: 98/255, 113/255, 142/255
                Label:
                    text:'Radial'
                    color: 98/255, 113/255, 142/255
            Label:
                text:'Seleção do motor'
                color: 98/255, 113/255, 142/255
            BoxLayout:
                orientation:'horizontal'
                spacing:7
                padding:7
                CheckBox:
                    group: 'motor'
                    color: 98/255, 113/255, 142/255
                Label:
                    text:'Alto'
                    color: 98/255, 113/255, 142/255
            BoxLayout:
                orientation:'horizontal'
                spacing:7
                padding:7
                CheckBox:
                    group: 'motor'
                    color: 98/255, 113/255, 142/255
                Label:
                    text:'convencional'
                    color: 98/255, 113/255, 142/255
        BoxLayout:
            id:opcoes
            orientation:'vertical'
            spacing:7
            padding:7
            size_hint_x:0.5
            pos_hint: {'center_x':0.5,'center_y':0.5}
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
        
        BoxLayout:
            orientation:'horizontal'
            spacing:7
            padding:7
            size_hint:0.5,0.35
            pos_hint:{'center_x':0.5}
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            TempBotao:
                text:'ligar'
        BoxLayout:
            orientation:'horizontal'
            spacing:7
            padding:7
            size_hint:0.5,0.35
            pos_hint:{'center_x':0.5}
            canvas:
                Color:
                    rgb:203/255, 208/255, 219/255
                Rectangle:
                    size: self.width+3,self.height+3
                    pos: self.x-3,self.y-3
            TempBotao:
                text:'fechar'
                on_release: root.dismiss()
                pos_hint:{'center_x':0.5,'center_y':0.5}
        
      

