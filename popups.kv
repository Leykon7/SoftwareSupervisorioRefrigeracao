#:kivy 1.11.1

<comandoVent>:
    title: 'Comandos dos ventiladores'
    size_hint: 0.75,0.5

    BoxLayout:
        orientation: 'horizontal'
        spacing: 35
        # canvas:
        #     Color:
        #         rgb: 225/255, 228/255, 235/255
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos
        
        BoxLayout:
            orientation: 'vertical'
            spacing: 35
            Label:
                text: 'Comando do Ventilador'
            BoxLayout:
                orientation: 'horizontal'
                spacing: 35
                Button:
                    text:'Ligar'
                Button:
                    text:'Desligar'
                Button:
                    text: 'Resetar'
            BoxLayout:
                orientation: 'horizontal'
                spacing: 35
                CheckBox:
                    id: axial
                Label:
                    text:'Axial'
                CheckBox:
                    id: radial
                Label:
                    text:'Radial'
        BoxLayout:
            orientation: 'vertical'
            spacing: 35
            Label:
                text: 'Selecionar Tipo de partida'
            Button:
                text: 'Tesys Direta'
            Button:
                text: 'ATV31 Inversor'
            Button:
                text: 'ATS48 Soft-start'

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'teste'
    

